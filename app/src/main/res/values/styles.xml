    <style name="TagButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="AboutHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AboutText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AboutBullet">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">5dp</item>
