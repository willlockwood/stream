<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/replyingWarning"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@id/images"
            android:paddingRight="30dp" android:paddingBottom="5dp" android:paddingTop="5dp"
            android:background="@color/colorPrimary"
            android:alpha="1" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone">
        <TextView
                android:text="Currently replying to a thread..."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/replyWarningText"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@id/replyWarningStop"
                android:textSize="16sp" android:textStyle="italic" android:textColor="@color/tagNotClickedBackground"/>
        <TextView
                android:text="STOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/replyWarningStop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp" android:textColor="@color/tagNotClickedBackground"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/images" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@id/replyingWarning"/>
    <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"-->
            <!--android:id="@+id/images">-->
        <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_upward_black_24dp"-->
                <!--android:id="@+id/imageView"/>-->
    <!--</LinearLayout>-->
    <ImageButton
            android:id="@+id/streamAddImageButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/streamInputLayout"
            android:background="@drawable/ic_image_black_24dp" app:layout_constraintTop_toBottomOf="@id/images"
    />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/streamInputLayout"
            app:layout_constraintLeft_toRightOf="@id/streamAddImageButton"
            app:layout_constraintRight_toLeftOf="@id/streamUploadButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:hintEnabled="false" app:layout_constraintTop_toBottomOf="@id/images">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/streamInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What are you thinking?"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
            android:id="@+id/streamUploadButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/speechButton"
            app:layout_constraintLeft_toRightOf="@id/streamInputLayout"
            android:background="@drawable/ic_arrow_upward_black_24dp" app:layout_constraintTop_toBottomOf="@id/images"/>

    <ImageButton
            android:id="@+id/speechButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/streamUploadButton"
            android:background="@drawable/ic_mic_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/images"/>

</androidx.constraintlayout.widget.ConstraintLayout>